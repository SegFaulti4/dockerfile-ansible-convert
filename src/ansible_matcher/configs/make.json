{
    "make": {
        "entry": "make <<parameters : mo>>",
        "opts": {
            "silent": {
                "aliases": ["-s", "--silent", "--quiet"],
                "arg_required": false,
                "many_args": false
            },
            "jobs": {
                "aliases": ["-j", "--jobs"],
                "arg_required": true,
                "many_args": false
            },
            "directory": {
                "aliases": ["-C", "--directory"],
                "arg_required": true,
                "many_args": false
            },
            "file": {
                "aliases": ["-f", "--file", "--makefile"],
                "arg_required": true,
                "many_args": false
            }
        },
        "examples": {
            "make": [
                {
                    "make": {
                        "chdir": "<<cwd>>"
                    }
                }
            ],
            "make <<param : m>>=<<value : m>>": [
                {
                    "make": {
                        "chdir": "<<cwd>>",
                        "params": "{ <<param>>:<<value>>, }"
                    }
                }
            ],
            "make <<target>>": [
                {
                    "make": {
                        "chdir": "<<cwd>>",
                        "target": "<<target>>"
                    }
                }
            ],
            "make <<target>> <<param : m>>=<<value : m>>": [
                {
                    "make": {
                        "chdir": "<<cwd>>",
                        "target": "<<target>>",
                        "params": "{ <<param>>:<<value>>, }"
                    }
                }
            ],
            "make <<param : m>>=<<value : m>> <<target>>": [
                {
                    "make": {
                        "chdir": "<<cwd>>",
                        "target": "<<target>>",
                        "params": "{ <<param>>:<<value>>, }"
                    }
                }
            ],
            "make <<pre_param : m>>=<<pre_value : m>> <<target>> <<post_param : m>>=<<post_value : m>>": [
                {
                    "make": {
                        "chdir": "<<cwd>>",
                        "target": "<<target>>",
                        "params": "{ <<pre_param>>:<<pre_value>>, <<post_param>>:<<post_value>>, }"
                    }
                }
            ]
        },
        "opts_postprocess": {
            "-C <<dir : p>>": {
                "make": {
                    "chdir": "<<dir>>"
                }
            },
            "-j <<n_jobs>>": {
                "make": {
                    "jobs": "<<n_jobs>>"
                }
            },
            "-f <<file : p>>": {
                "make": {
                    "file": "<<file>>"
                }
            },
            "-s": {}
        }
    }
}