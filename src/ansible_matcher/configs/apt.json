{
    "ansible.builtin.apt": {
        "entry": "apt <<parameters : m>>",
        "opts": {
            "allow-unauthenticated": {
                "aliases": ["--allow-unauthenticated"],
                "arg_required": false,
                "many_args": false
            },
            "assume-yes": {
                "aliases": ["-y", "--yes", "--assume-yes"],
                "arg_required": false,
                "many_args": false
            },
            "autoremove": {
                "aliases": ["--auto-remove", "--autoremove"],
                "arg_required": false,
                "many_args": false
            },
            "fix-broken": {
                "aliases": ["-f", "--fix-broken"],
                "arg_required": false,
                "many_args": false
            },
            "fix-missing": {
                "aliases": ["-m", "--ignore-missing", "--fix-missing"],
                "arg_required": false,
                "many_args": false
            },
            "no-install-recommends": {
                "aliases": ["--no-install-recommends"],
                "arg_required": false,
                "many_args": false
            },
            "option": {
                "aliases": [ "-o",  "--option"],
                "arg_required": true,
                "many_args": true
            },
            "purge": {
                "aliases": ["--purge"],
                "arg_required": false,
                "many_args": false
            },
            "quiet": {
                "aliases": ["-q", "--quiet"],
                "arg_required": false,
                "many_args": false
            }
        },
        "examples": {
            "apt install <<pkg_string>>": [
                {
                    "ansible.builtin.apt": {
                        "name": "{{ packages | split }}"
                    },
                    "vars": {
                        "packages": "<<pkg_string>>"
                    }
                }
            ],
            "apt install <<packages : m>>": [
                {
                    "ansible.builtin.apt": {
                        "name": ["<<packages>>"],
                        "force_apt_get": true
                    }
                }
            ],
            "apt update": [
                {
                    "ansible.builtin.apt": {
                        "update_cache": "yes",
                        "force_apt_get": true
                    }
                }
            ],
            "apt autoremove": [
                {
                    "ansible.builtin.apt": {
                        "autoremove": "yes",
                        "force_apt_get": true
                    }
                }
            ],
            "apt clean": [
                {
                    "ansible.builtin.apt": {
                        "clean": true,
                        "force_apt_get": true
                    }
                }
            ],
            "apt upgrade": [
                {
                    "ansible.builtin.apt": {
                        "upgrade": "yes",
                        "force_apt_get": true
                    }
                }
            ],
            "apt remove <<pkg :m>>": [
                {
                    "ansible.builtin.apt": {
                        "name":["<<pkg>>"],
                        "state": "absent",
                        "force_apt_get": true
                    }
                }
            ]
        },
        "opts_postprocess": {
            "--allow-unauthenticated": {
                "ansible.builtin.apt": {
                    "allow_unauthenticated": "yes"
                }
            },
            "--assume-yes": {},
            "--autoremove": {
                "ansible.builtin.apt": {
                    "autoremove": true
                }
            },
            "--no-install-recommends": {
                "ansible.builtin.apt": {
                    "install_recommends": false
                }
            },
            "-o Dpkg::Options::=<<value>>": {
                "ansible.builtin.apt": {
                    "dpkg_options": "<<value>>,"
                }
            },
            "--purge": {
                "ansible.builtin.apt": {
                    "purge": "yes"
                }
            },
            "--quiet": {}
        }
    }
}