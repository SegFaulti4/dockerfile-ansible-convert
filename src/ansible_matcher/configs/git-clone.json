{
    "git clone": {
        "entry": "git clone <<parameters : m>>",
        "opts": {
            "branch": {
                "aliases": ["-b", "--branch"],
                "arg_required": true,
                "many_args": false
            },
            "depth": {
                "aliases": ["--depth"],
                "arg_required": true,
                "many_args": false
            },
            "recurse submodules": {
                "aliases": ["--recurse-submodule", "--recursive"],
                "arg_required": false,
                "many_args": false
            },
            "quiet": {
                "aliases": ["-q", "--quiet"],
                "arg_required": false,
                "many_args": false
            }
        },
        "examples": {
            "git clone <<repo>> .": [
                {
                    "ansible.builtin.git": {
                        "repo": "<<repo>>",
                        "dest": "<<cwd>>",
                        "clone": true,
                        "recursive": false
                    }
                }
            ],
            "git clone <<repo>>": [
                {
                    "ansible.builtin.git": {
                        "repo": "{{ repo }}",
                        "dest": "{{ (dir, repo | basename | regex_replace('.git$')) | path_join }}",
                        "clone": true,
                        "recursive": false
                    },
                    "vars": {
                        "dir": "<<cwd>>",
                        "repo": "<<repo>>"
                    }
                }
            ],
            "git clone <<repo>> <<dir : p>>": [
                {
                    "ansible.builtin.git": {
                        "repo": "<<repo>>",
                        "dest": "<<dir>>",
                        "clone": true,
                        "recursive": false
                    }
                }
            ]
        },
        "opts_postprocess": {
            "--quiet": {},
            "--recurse-submodule": {
                "ansible.builtin.git": {
                    "recursive": true
                }
            },
            "--depth <<depth>>": {
                "ansible.builtin.git": {
                    "depth": "<<depth>>"
                }
            },
            "--branch <<branch>>": {
                "ansible.builtin.git": {
                    "version": "<<branch>>"
                }
            }
        }
    }
}