{
    "mv": {
        "entry": "mv <<parameters : m>>",
        "opts": {
            "force": {
                "arg_required": false,
                "many_args": false,
                "aliases": ["-f",  "--force"]
            },
            "verbose": {
                "aliases": [ "--verbose",  "-v"],
                "arg_required": false,
                "many_args": false
            },
            "no clobber": {
                "aliases": ["-n", "--no-clobber"],
                "arg_required": false,
                "many_args": false
            },
            "target directory": {
                "arg_required": true,
                "many_args": false,
                "aliases": ["-t", "--target-directory"]
            }
        },
        "examples": {
            "mv <<globs : m>> <<dest : p>>": [
                {
                    "ansible.builtin.shell": {
                        "cmd": "realpath -sm {{ files }}",
                        "chdir": "<<cwd>>"
                    },
                    "vars": {
                        "files": "<<globs>>"
                    },
                    "changed_when": false,
                    "register": "ls_reg"
                },
                {
                    "ansible.builtin.stat": {
                        "path": "<<dest>>",
                        "follow": false
                    },
                    "changed_when": false,
                    "register": "st_reg"
                },
                {
                    "ansible.builtin.fail": {
                        "msg": "Failed to copy files - last file is not a directory"
                    },
                    "when": [
                        "ls_reg.stdout_lines | length > 1",
                        "st_reg.stat.isdir is undefined or st_reg.stat.isdir == False"
                    ]
                },
                {
                    "ansible.builtin.copy": {
                        "src": "{{ item | regex_replace('/$') }}",
                        "dest": "{{ ((dest, item | basename) | path_join) if dest_is_dir else dest }}",
                        "follow": false,
                        "remote_src": true,
                        "force": false
                    },
                    "loop": "{{ ls_reg.stdout_lines }}",
                    "vars": {
                        "dest": "<<dest>>",
                        "dest_is_dir": "{{ (st_reg.stat.isdir is defined and st_reg.stat.isdir) | ternary(true, false) }}"
                    }
                },
                {
                    "ansible.builtin.file": {
                        "path": "{{ item | regex_replace('/$') }}",
                        "follow": false,
                        "state": "absent"
                    },
                    "loop": "{{ ls_reg.stdout_lines }}"
                }
            ]
        },
        "opts_postprocess": {
            "--force": {
                "ansible.builtin.copy": {
                    "force": true
                }
            },
            "--verbose": {},
            "--recursive": {}
        }
    }
}