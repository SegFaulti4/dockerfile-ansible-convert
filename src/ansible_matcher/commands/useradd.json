{
    "useradd": {
        "entry": "useradd <<parameters : m>>",
        "opts": {
            "base dir": {
                "aliases": ["-b", "--base-dir"],
                "arg_required": true,
                "many_args": false
            },
            "comment": {
                "aliases": ["-c", "--comment"],
                "arg_required": true,
                "many_args": false
            },
            "create home": {
                "aliases": ["-m", "--create-home"],
                "arg_required": false,
                "many_args": false
            },
            "home dir":{
                "aliases": ["-d", "--home-dir", "--home"],
                "arg_required": true,
                "many_args": false
            },
            "default": {
                "aliases": ["-D", "--defaults"],
                "arg_required": false,
                "many_args": false
            },
            "primary group": {
                "aliases": ["-g", "--gid"],
                "arg_required": true,
                "many_args": false
            },
            "supplementary groups": {
                "aliases": ["-G", "--groups"],
                "arg_required": true,
                "many_args": false
            },
            "skeleton directory": {
                "aliases": ["-k", "--skel"],
                "arg_required": true,
                "many_args": false
            },
            "key": {
                "aliases": ["-K", "--key"],
                "arg_required": true,
                "many_args": true
            },
            "no log init": {
                "aliases": ["-l", "--no-log-init"],
                "arg_required": false,
                "many_args": false
            },
            "no create home": {
                "aliases": ["-M", "--no-create-home"],
                "arg_required": false,
                "many_args": false
            },
            "system": {
                "aliases": ["-r", "--system"],
                "arg_required": false,
                "many_args": false
            },
            "shell": {
                "aliases": ["-s", "--shell"],
                "arg_required": true,
                "many_args": false
            },
            "user group": {
                "aliases": ["-U", "--user-group"],
                "arg_required": false,
                "many_args": false
            },
            "no user group": {
                "aliases": ["-N", "--no-user-group"],
                "arg_required": false,
                "many_args": false
            },
            "non unique": {
                "aliases": ["-o", "--non-unique"],
                "arg_required": false,
                "many_args": false
            },
            "uid": {
                "aliases": ["-u", "--uid"],
                "arg_required": true,
                "many_args": false
            },
            "password": {
                "aliases": ["-p", "--password"],
                "arg_required": true,
                "many_args": false
            }
        },
        "examples": {
            "useradd <<name>>": [
                {
                    "user": {
                        "state": "present",
                        "name": "{{ username }}",
                        "group": "{{ username }}",
                        "create_home": false
                    },
                    "vars": {
                        "username": "<<name>>"
                    }
                }
            ],
            "useradd --no-user-group <<name>>": [
                {
                    "user": {
                        "state": "present",
                        "name": "{{ username }}",
                        "create_home": false
                    },
                    "vars": {
                        "username": "<<name>>"
                    }
                }
            ]
        },
        "opts_postprocess": {
            "--base-dir <<dir : p>>": {
                "user": {
                    "home": "{{ (<<dir>>, username) | path_join }}"
                }
            },
            "--comment <<comment>>": {
                "user": {
                    "comment": "<<comment>>"
                }
            },
            "--create-home": {
                "user": {
                    "create_home": true
                }
            },
            "--home-dir <<dir : p>>": {
                "user": {
                    "home": "<<dir>>"
                }
            },
            "--gid <<group>>": {
                "user": {
                    "group": "<<group>>"
                }
            },
            "--groups <<groups>>": {
                "user": {
                    "groups": "<<groups>>"
                }
            },
            "--skel <<dir : p>>": {
                "user": {
                    "skeleton": "<<dir>>"
                }
            },
            "--no-create-home": {
                "user": {
                    "create_home": false
                }
            },
            "--system": {
                "user": {
                    "system": true
                }
            },
            "--shell <<shell>>": {
                "user": {
                    "shell": "<<shell>>"
                }
            },
            "--user-group": {
                "user": {
                    "group": "{{ username }}"
                }
            },
            "--non-unique": {
                "user": {
                    "non_unique": true
                }
            },
            "--uid <<uid>>": {
                "user": {
                    "uid": "<<uid>>"
                }
            },
            "--password <<password>>": {
                "user": {
                    "password": "<<password>>"
                }
            }
        }
    }
}