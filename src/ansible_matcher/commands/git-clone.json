{
    "git clone": {
        "entry": "git clone <<parameters : m>>",
        "opts": {
            "branch": {
                "aliases": ["-b", "--branch"],
                "arg_required": true,
                "many_args": false
            },
            "depth": {
                "aliases": ["--depth"],
                "arg_required": true,
                "many_args": false
            },
            "recurse submodules": {
                "aliases": ["--recurse-submodule", "--recursive"],
                "arg_required": false,
                "many_args": false
            },
            "quiet": {
                "aliases": ["-q", "--quiet"],
                "arg_required": false,
                "many_args": false
            }
        },
        "examples": {
            "git clone <<repo>>": [
                {
                    "git": {
                        "repo": "<<repo>>",
                        "dest": "<<cwd>>",
                        "clone": true,
                        "recursive": false
                    }
                }
            ],
            "git clone <<repo>> <<dir : p>>": [
                {
                    "git": {
                        "repo": "<<repo>>",
                        "dest": "<<dir>>",
                        "clone": true,
                        "recursive": false
                    }
                }
            ]
        },
        "opts_postprocess": {
            "--quiet": {},
            "--recurse-submodule": {
                "git": {
                    "recursive": true
                }
            },
            "--depth <<depth>>": {
                "git": {
                    "depth": "<<depth>>"
                }
            },
            "--branch <<branch>>": {
                "git": {
                    "version": "<<branch>>"
                }
            }
        }
    }
}